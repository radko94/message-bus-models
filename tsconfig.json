{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowJs": false,
    "pretty": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
