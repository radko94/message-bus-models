{
  "compilerOptions": {
    "lib": ["es2015", "es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@interfaces/*": ["interfaces/index.ts"],
      "@helpers/*": ["helpers/index.ts"]
    }
  },
  "lib": ["es2015"]
}
